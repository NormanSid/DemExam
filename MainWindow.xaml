<Window x:Class="DemoExamCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemExam"
        mc:Ignorable="d"
        Title="Калькулятор баллов демонстрационного экзамена" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Введите баллы за каждый модуль:" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Модуль 1 -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Модуль 1 (макс. 10):" VerticalAlignment="Center"/>
        <TextBox x:Name="Module1TextBox" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="NumericOnly_PreviewTextInput"/>

        <!-- Модуль 2 -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Модуль 2 (макс. 15):" VerticalAlignment="Center"/>
        <TextBox x:Name="Module2TextBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="NumericOnly_PreviewTextInput"/>

        <!-- Модуль 3 -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Модуль 3 (макс. 25):" VerticalAlignment="Center"/>
        <TextBox x:Name="Module3TextBox" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="NumericOnly_PreviewTextInput"/>

        <!-- Модуль 4 -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Модуль 4 (макс. 25):" VerticalAlignment="Center"/>
        <TextBox x:Name="Module4TextBox" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="NumericOnly_PreviewTextInput"/>

        <!-- Модуль 5 -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Модуль 5 (макс. 25):" VerticalAlignment="Center"/>
        <TextBox x:Name="Module5TextBox" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="NumericOnly_PreviewTextInput"/>

        <!-- Кнопка расчета и результат -->
        <Button Grid.Row="6" Grid.Column="0" Content="Рассчитать" Click="CalculateButton_Click" HorizontalAlignment="Center"/>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="6" Grid.Column="1" Text="" VerticalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Window>
